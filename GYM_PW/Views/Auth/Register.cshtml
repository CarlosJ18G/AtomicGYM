@model GYM_PW.Models.User.User

@{
    ViewData["Title"] = "SignUp";
}

<div class="login-card">
    <h1 class="text-center mb-2">SIGN UP</h1>
    <div class="text-center person-icon mb-2 mt-0">
        <i class="bi bi-person-circle"></i>
    </div>
    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label for="DocumentNumber" class="form-label">Document Number</label>
            <input asp-for="Document" type="text" class="form-control" id="DocumentNumber" placeholder="1234567890">
        </div>
        <div class="mb-3">
            <label for="Name" class="form-label">Full Name</label>
            <input asp-for="Fullname" type="text" class="form-control" id="Name" placeholder="Chimpanzini Bananini">
        </div>
        <div class="mb-3">
            <label for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" type="text" class="form-control" id="PhoneNumber" placeholder="3001234567">
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="example@email.com">
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter password">
        </div>
        <button type="submit" class="btn btn-login w-100">SIGN UP</button>

        <div class="divider my-3">
            <span class="text-muted">OR</span>
        </div>

        <div class="text-center social-icons mb-3">
            <i class="bi bi-google"></i>
            <i class="bi bi-envelope"></i>
            <i class="bi bi-apple"></i>
        </div>

        <div class="text-center">
            <span style="font-size: 0.9em;">Already have an account <a asp-area="" asp-controller="Login" asp-action="SignIn">SIGN IN</a></span>
        </div>
    </form>
</div>


