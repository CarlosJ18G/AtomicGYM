@{
    ViewData["Title"] = "SignIn";
}

<div class="login-card">
    <h1 class="text-center mb-2">SIGN IN</h1>
    <div class="text-center person-icon mb-2 mt-0">
        <i class="bi bi-person-circle"></i>
    </div>
    <form>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" placeholder="Enter email">
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" placeholder="Enter password">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="remember">
            <label class="form-check-label" for="remember">Remember me?</label>
        </div>
        <button type="submit" class="btn btn-login w-100">LOGIN</button>

        <div class="text-end mt-2">
            <a href="#" class="text-muted" style="font-size: 0.9em;">Forgot Password?</a>
        </div>

        <div class="divider my-3">
            <span class="text-muted">OR</span>
        </div>

        <div class="text-center social-icons mb-3">
            <i class="bi bi-google"></i>
            <i class="bi bi-envelope"></i>
            <i class="bi bi-apple"></i>
        </div>

        <div class="text-center">
            <span style="font-size: 0.9em;">Need an account? <a asp-area="" asp-controller="Login" asp-action="SignUp">SIGN UP</a></span>
        </div>
    </form>
</div>

